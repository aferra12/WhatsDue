<!-- credit to startbootstrap.com and w3schools.com -->
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Course Organizer App</title>
    <!-- for some icons -->
    <script src="https://kit.fontawesome.com/2d30f0a12d.js" crossorigin="anonymous"></script>

</head>
<!-- from bootstrap setup -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="/css/CourseOverview.css">

<body>
<!-- sidebar -->
<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    {{#each professorList as |prof|}}
        <a href="/dashboard/{{prof.id}}">My Dashboard</a>
    {{/each}}
    {{#each sidebarList}}
        <ul>
            <div class="dropdown">
                <li><u>{{courseName}}</u>&#8595;
                    <div class="dropdown-content">
                        <ul>
                            <li><a href="/overview/{{profId}}/{{courseId}}">Overview</a></li>
                            <li><a href="/calendar/{{profId}}/{{courseId}}">Calendar</a></li>
                            <li><a href="/table/{{profId}}/{{courseId}}">Material Table</a></li>
                        </ul>
                    </div>
                </li>
            </div>
        </ul>
    {{/each}}
    <a href="/">Logout</a>
    <img src="/sources/logo.png" width="100%" align="center" alt="">
</div>
<span style="font-size:30px;cursor:pointer;color:white; padding-left: 10px" onclick="openNav()">&#9776;</span>
<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
    }

    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>

<img src="/sources/logo.png" width="12%" align="right" alt="">

<!-- displays course info in a table for formatting -->
{{#each courseList}}
    <h1 class="display-2" align="center">Your {{ courseName }} Course! </h1>
    <h2>{{ id }}</h2>
    <table class="table table-sm" style="width:700px" align="center">
        <thead class="thead-dark">
        <tr>
           <th colspan="2">{{ courseName }}, Course Number: {{ courseId }} </th>
        </tr>
        <tr>
            <td style="width:50%"> Lectures: </td>
            <td> {{ lectureDaysOfWeek }} from {{ lectureStartTime }} - {{ lectureEndTime }} </td>
        </tr>
        <tr>
            <td> Office Hours: </td>
            <td> {{ ohDaysOfWeek }} from {{ ohStartTime }} - {{ ohEndTime }} </td>
        </tr>
        </thead>
    </table>
{{/each}}
<br>
<br>
{{#each courseList}}
    <div class="studentLinks">
        <table class="table table-sm" style="width:50%" align="center">
            <thead class="thead-dark">
            <tr>
                <th colspan="2"><u>Student Links</u></th>
            </tr>
            <tr>
                <td>Student Overview:</td>
                <td><a href="/studentOverview/{{profId}}/{{courseId}}"> /studentOverview/{{profId}}/{{courseId}}</a></td>
            </tr>
            <tr>
                <td>Student Calendar:</td>
                <td><a href="/studentCalendar/{{profId}}/{{courseId}}"> /studentCalendar/{{profId}}/{{courseId}}</a></td>
            </tr>
            <tr>
                <td>Student Material Table:</td>
                <td><a href="/studentTable/{{profId}}/{{courseId}}"> /studentTable/{{profId}}/{{courseId}}</a></td>
            </tr>
            </thead>
        </table>
    </div>
{{/each}}
<br>

{{#each professorList}}
    <iframe src="{{calURL}}"
            style="border: 0" width="900" height="500" frameborder="10" scrolling="no"></iframe>
{{/each}}

<!-- from bootstrap set up -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>