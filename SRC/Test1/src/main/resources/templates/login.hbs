<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Course Organizer App</title>
    <!-- for icons -->
    <script src="https://kit.fontawesome.com/2d30f0a12d.js" crossorigin="anonymous"></script>
</head>

<!-- from bootstrap set up -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="/css/login.css">
<body>
<br>
<h1 class="display-2" align="center">Login to <i>What's Due</i> !</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5" style="background-image: url('/sources/logo.png'); background-position: top; background-size: 27%; background-repeat: no-repeat;">
                <div class="card-body">
                    <h5 class="card-title text-center"><br><br></h5>
                    <form class="form-signin" action="/login" method="post">
                        <div class="form-label-group">
                            <input type="text" name="professorName" id="professorName" class="form-control" placeholder="professorName" required autofocus>
                            <label for="professorName">Please enter your name</label>
                        </div>
                        <div class="form-label-group">
                            <input type="text" name="profId" id="profId" class="form-control" placeholder="profId" required>
                            <label for="profId">Please enter your professor id (ex: blinton4)</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase">Log In</button>
                        <hr class="my-4">
                    </form>
                    <p align="center">Need to sign up? Click <a href="/signup">here</a> to sign up!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- from bootstrap set up -->

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>