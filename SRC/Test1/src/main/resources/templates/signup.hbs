<!-- Design found on startbootstrap.com -->
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Course Organizer App</title>
    <!-- for icons -->
    <script src="https://kit.fontawesome.com/2d30f0a12d.js" crossorigin="anonymous"></script>
</head>

<!-- from bootstrap set up -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<link rel="stylesheet" href="/css/signup.css">

<body>
<h1 class="display-2" align="center">Welcome to <i>What's Due</i> !</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5" style="background-image: url('/sources/logo.png'); background-position: top; background-size: 27%; background-repeat: no-repeat;">
                <div class="card-body">
                    <h5 class="card-title text-center"><br><br></h5>
                    <form class="form-signin" action="/addProf" method="post">
                        <div class="form-label-group">
                            <input type="text" name="professorName" id="professorName" class="form-control" placeholder="professorName" required autofocus>
                            <label for="professorName">Enter your name</label>
                        </div>
                        <div class="form-label-group">
                            <input type="text" name="profId" id="profId" class="form-control" placeholder="profId" required>
                            <label for="profId">Choose a professor id (ex: blinton4)</label>
                        </div>
                        <div class="form-label-group"   data-toggle="tooltip" title="
               1. Go to google.com/calendar
2. Navigate to settings in the top right
3. Click on desired calendar under 'Settings for my calendars' on the left-hand toolbar
4. Select 'integrate calendar'
5. In the gray box labeled 'embed code', copy only what is inside the quotes between
'src=' and 'style=' and paste this into the box below. You are all set!" class="red-tooltip" align="center">
                            <input type="text" name="calURL" id="calURL" class="form-control" placeholder="calURL" required>
                            <label for="calURL" align="left">Link a Google calendar</label><br>
                            <u>Hover to learn how to link your calendar</u>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase">Create Account</button>
                        <hr class="my-4">
                    </form>
                    <p align="center">Already a user? Click <a href="/">here</a> to login!</p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- from bootstrap set up -->
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
</html>